<%- include("../partials/header") %>

    <div class="main-body">
        <div class="element">
            <h3>Add New ROM</h3>
    
            <div class="element2">
                <form action="/rom" method="POST">
                    <table class="form-row">
                        <tr>
                            <td class="form-row">
                                <label for="romBudget">Budget (t):</label>
                            </td>
                            <td class="form-row">
                                <input type="number" min="0" id="romBudget" name="rom[budget]" required>
                            </td>
                        </tr>
                        <tr>
                            <td class="form-row">
                                <label for="romForecast">Forecast (t):</label>
                            </td>
                            <td class="form-row">
                                <input type="number" min="0" id="romForecast" name="rom[forecast]" required>
                            </td>
                        </tr>
                        <tr>
                            <td class="form-row">
                                <label for="romActual">Actual (t):</label>
                            </td>
                            <td class="form-row">
                                <input type="number" min="0" id="romActual" name="rom[actual]" required>
                            </td>
                        </tr>
    
                        <tr>
                            <td class="form-row" colspan="2">
                                <button style="width: 100%;" type="submit">Submit</button>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
            <a href="/rom">Back</a>
        </div>
    </div>



