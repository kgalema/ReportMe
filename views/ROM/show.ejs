<%- include("../partials/header") %>

    <div class="main-body">
        <div class="element">
            <h3>ROM entry for: <%= foundROM.created.toLocaleDateString("en-GB") %> </h3>
            <div class="element2">
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Budget</th>
                            <th>Forecast</th>
                            <th>Actual</th>
                        </tr>
                    </thead>
                    <tbody>
                        <td>
                            <%= foundROM.created.toLocaleDateString("en-GB") %>
                        </td>
                        <td>
                            <%= foundROM.budget %>
                        </td>
                        <td>
                            <%= foundROM.forecast %>
                        </td>
                        <td>
                            <%= foundROM.actual %>
                        </td>
                    </tbody>
                </table>
            </div>
            <br>
            <a href="/rom">Back</a>
            <br>
            <% if(currentUser && currentUser.isAdmin){ %>
                <div class="admin">
                    <a href="/rom/<%= foundROM._id %>/edit">Edit</a>
                    <form action="/rom/<%= foundROM._id %>?_method=DELETE" method="post">
                        <button id="delete" type="submit">Delete</button>
                    </form>
                </div>
            <%}%>
        </div>
    </div>



