<%- include("../../partials/header") %>

<div class="main-body">
    <div class="element">
        <div class="element2">
            <h2>Edit Closed Breakdown: <%= locals.breakdown.breakdown.equipment %> at <%= locals.breakdown.breakdown.section.name %> </h2>
            <form action="/closedBreakdowns/<%= locals.breakdown._id %>?_method=PUT" method="post">
                <table class="form-row">
                    <tr>
                        <td class="form-row">
                            <label for="comments">Artisan comments:</label>
                        </td>
                        <td class="form-row">
                            <textarea name="closedBreakdown[comments]" id="comments" cols="30" rows="5" placeholder="Artisan's version of the breakdown. What parts were changed if any?" required><%= locals.breakdown.comments %></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <label for="endDate">Date:</label>
                        </td>
                        <td class="form-row">
                            <input style="width: fit-content;" id="endDate" value="<%= moment(breakdown.endTime).format('YYYY-MM-DD') %>" name="closedBreakdown[endDate]" type="date" required>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <label for="startTime">Time End:</label>
                        </td>
                        <td class="form-row">
                            <input  id="startTime" value="<%= breakdown.end %>" name="closedBreakdown[endTime]" type="time" required>
                        </td>
                    </tr>

                    <tr>
                        <td class="form-row" colspan="2">
                            <button style="width: 100%;" type="submit">Update</button>
                        </td>
                    </tr>
                </table>
            </form>
            <div>
                <a href="/closedBreakdowns/<%= locals.breakdown._id %>">&#11013 Back</a>
            </div>
        </div>
  </div>
</div>



