<%- include("../../partials/header") %>

<div class="main-body">
    <div class="element">
        <div class="element2">
            <h2>Closing Breakdown</h2>
            <form action="/breakdowns/<%= locals.breakdownId %>/closedBreakdowns" method="POST">
                <table class="form-row">
                    <tr>
                        <td class="form-row">
                            <label for="comments">Comments:</label>
                        </td>
                        <td class="form-row">
                            <textarea name="closedBreakdown[comments]" id="comments" cols="30" rows="5" placeholder="Artisan's version of the breakdown. What parts were changed if any?" required></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <label for="startTime">End Time:</label>
                        </td>
                        <td class="form-row">
                            <input  id="startTime" name="closedBreakdown[endTime]" type="time" required>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <input type="text" value="<%= locals.breakdownId %>" name="closedBreakdown[breakdown][id]" hidden readonly required>
                        </td>
                    </tr>
            
                    <tr>
                        <td class="form-row" colspan="2">
                            <button style="width: 100%;" type="submit">Submit</button>
                        </td>
                    </tr>
                </table>
            </form>
            <div>
                <a href="/breakdown/<%= locals.breakdownId %>">&#11013 Back</a>
            </div>
        </div>
  </div>
</div>



