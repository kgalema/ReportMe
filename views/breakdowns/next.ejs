<%- include("../partials/header") %>
<div class="main-body">
    <div class="element">
        <h3>Select New Shift</h3>
        <form action="/breakdown/<%= breakdown._id %>?_method=PUT&query=next" method="POST">
            <div class="shift">
                <p>
                    <% const shift = breakdown.shift %>
                    <% let bdownEnd %>
                    <% locals.shifts.forEach(e => { %>
                        <% if (shift === e.name.toLowerCase()) { %>
                            <% bdownEnd = e.end %>
                        <% } %>
                    <% }) %>
                </p>
                <select name="breakdown[shift]" id="">
                    <% locals.shifts.forEach((shift) => { %>
                        <% if (shift.name.toLowerCase() !== breakdown.shift) { %>
                            <option value="<%= shift.name.toLowerCase()%>&<%=shift.start%>&<%=bdownEnd%>"><%= shift.name %></option>
                        <% } %>
                    <% }) %>
                </select>
            </div>
            <br>
            <table class="form-row">
                <tr>
                    <td class="form-row">
                        <label for="equipment">Item/TMM ID:</label>
                    </td>
                    
                    <td class="form-row">
                        <%= breakdown.equipment %>
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="section">Section:</label>
                    </td>
                    
                    <td class="form-row">
                        <%= breakdown.section.name %>
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="description">Description:</label>
                    </td>
                    <td class="form-row comments_cell">
                        <%= breakdown.description %>
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="startDate">Date:</label>
                    </td>
                    <td class="form-row">
                        <%= breakdown.startTime.toDateString() %>
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="startTime">Time Start:</label>
                    </td>
                    <td class="form-row">
                        <%= breakdown.start %>
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="sapNumber">Ref Number:</label>
                    </td>
                    
                    <td class="form-row">
                        <%= breakdown.sapNumber %>
                    </td>
                </tr>
                
        
                <tr>
                    <td class="form-row" colspan="2">
                        <button style="width: 100%;" type="submit">Move</button>
                    </td>
                </tr>
            </table>
        </form>
        <div>
            <a href="/breakdown/<%= breakdown._id %>">&#11013 Back</a>
        </div>
    </div>
</div>


<%- include("../partials/sidebar") %>
<%- include("../partials/footer") %>
