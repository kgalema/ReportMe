<%- include("../partials/header") %>


    <div class="main-body">

        <div class="element">

            <h2>Edit Red Panel <%= newRedPanel.panel %> of <%= newRedPanel.section.name %> </h2>

            <form action="/sections/<%= newRedPanel.section.id %>/newRedPanel/<%= newRedPanel._id%>?_method=PUT" method="POST">
                <table class="form-row">
                    <tr>
                        <td class="form-row">
                            <label for="panel">Panel name:</label>
                        </td>
                        <td class="form-row">
                            <input type="text" id="panel" name="newRedPanel[panel]" value="<%= newRedPanel.panel %>" required onkeyup="validatePanelName(event)">
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <label for="TARP-triggers">TARP red trigger(s):</label>
                        </td>
                        <td class="form-row">
                            <textarea name="newRedPanel[triggers]" id="TARP-triggers" cols="30" rows="5" required><%= newRedPanel.triggers %></textarea>
                        </td>
                    </tr>
                    
                    <tr>
                        <td class="form-row">
                            <label for="declaredDate">Date panel declared:</label>
                        </td>
                        <td class="form-row">
                            <input id="declaredDate" name=newRedPanel[dateDeclared] type="date" value="<%= moment(newRedPanel.declaredDate).format('YYYY-MM-DD') %>" required>
                        </td>
                    </tr>
                    
                    
                
                    <tr>
                        <td class="form-row" colspan="2">
                            <button style="width: 100%;" type="submit">Update!</button>
                        </td>
                    </tr>
                </table>
            </form>
            <div>
                <a href="/newRedPanel/<%= newRedPanel._id %>">&#11013 Back</a>
            </div>
        </div>
    </div>


