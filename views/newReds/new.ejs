            <form action="/sections/<%= section._id %>/newRedPanels" method="POST">
                <table class="form-row">
                    <tr>
                        <td class="form-row">
                            <label for="panel-name">Panel:</label>
                        </td>
                        
                        <td class="form-row">
                            <input type="text" id="panel-name" name="newRed[panel]" required>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <label for="">TARP Red Trigger(s):</label>
                        </td>
                        <td class="form-row">
                            <input type="text" name="newRed[triggers]" required>
                        </td>
                    </tr>
                    
                    <tr>
                        <td class="form-row">
                            <label for="declaredDate">Date Declared Red:</label>
                        </td>
                        <td class="form-row">
                            <input  id="declaredDate" name="newRed[dateDeclared]" type="datetime-local" required>
                        </td>
                    </tr>
