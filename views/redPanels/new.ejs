<%- include("../partials/header") %>


    <div class="main-body">

        <div class="element">

            <h3>Issue TARP Red Recommendation for <%= section.name %>'s <%= redPanel.panel %> Panel </h3>

            <form action="/sections/<%= section._id %>/redPanels?q=<%= queryId %>" enctype="multipart/form-data" method="POST">
                <table class="form-row">
                    <tr>
                        <td class="form-row">
                            <label for="panel-name">Panel:</label>
                        </td>
                        <td class="form-row">
                            <input type="text" id="panel-name" name="redPanel[panel]"  value="<%= redPanel.panel %>" readonly required>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <label for="triggers">TARP Red Trigger(s):</label>
                        </td>
                        <td class="form-row">
                            <input type="text" id="triggers" name="redPanel[trigger]" value="<%= redPanel.triggers %>" readonly required>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <label for="report-number">Report Number:</label>
                        </td>
                        <td class="form-row">
                            <input name="redPanel[reportNumber]" id="report-number" type="text" required>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <label for="date-declared">Date Panel Declared:</label>
                        </td>
                        <td class="form-row">
                            <input name="redPanel[declaredDate]" id="date-declared" type="date" value="<%= moment(redPanel.dateDeclared).format('YYYY-MM-DD')%>" readonly required>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <label for="">Date Report Issued:</label>
                        </td>
                        <td class="form-row">
                            <input name="redPanel[issueDate]" type="datetime-local" required>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row">
                            <label for="">Attach report:</label>
                        </td>
                        <td class="form-row">
                            <input name="issuedReport" type="file" accept=".pdf" required>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-row" colspan="2">
                            <button style="width: 100%;" type="submit">Submit</button>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>

<%- include("../partials/sidebar") %>


<%- include("../partials/footer") %>