<%- include("../partials/header") %>

<div class="main-body">
    <div class="element">
        <div>
            <h2>Allocated Resources: <%= locals.foundAllocation.section %></h2>
            <p>Date: <%= locals.foundAllocation.date.toDateString() %> </p>
            <p>Shift: <%= locals.foundAllocation.shift.toUpperCase() %> </p>
            <p>LHD(s): <%= locals.foundAllocation.LHDs %> </p>
            <p>Bolter(s): <%= locals.foundAllocation.bolters %></p>
            <p>Drill Rig(s): <%= locals.foundAllocation.drillRigs %></p>
        </div>

        <hr>

        <div>
            <a href="/resource">Dashboard</a>
        </div>

        <% if(locals.currentUser && locals.currentUser.isAdmin){ %>
            <p>
                <a href="/resource/<%= foundAllocation._id %>/edit">Edit</a>
            </p>

            <form action="/resource/<%= foundAllocation._id %>?_method=DELETE" method="post">
                <button id="delete" type="submit">Delete</button>
            </form>
        <% } %>
    </div>
</div>

<%- include("../partials/sidebar") %>
