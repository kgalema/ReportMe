<%- include("../partials/header") %>

<div class="main-body">
    <div class="element">

        <h2>Edit <%= section.name %> Section</h2>

        <form action="/sections/<%= section._id %>?_method=PUT" method="post">
            <table class="form-row">
                <tr>
                    <td class="form-row">
                        <label for="section">Section:</label>
                    </td>
                    <td class="form-row">
                        <input id="section" required type="text" name="section[name]" onkeyup="validatePanelName(event)" value="<%= locals.section.name %>">
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="mineOverseer">Mine Overseer:</label>
                    </td>
                    <td class="form-row">
                        <select name="section[mineOverseer]" id="mineOverseer" required>
                            <option value="<%= section.mineOverseer._id +'&'+ section.mineOverseer.name %>" selected><%= section.mineOverseer.name %></option>
                            <% locals.mineOverseers.forEach(mo => { %>
                                <option value="<%= mo._id + '&'+ mo.preferredName %>"><%= mo.preferredName %></option>
                            <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="budget">Budget:</label>
                    </td>
                    <td class="form-row">
                        <input id="budget" required type="number" step="0.1" min="0" name="section[budget]"
                            value="<%= locals.section.budget %>">
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="forecast">Forecast:</label>
                    </td>
                    <td class="form-row">
                        <input id="forecast" required type="number" step="0.1" min="0" name="section[forecast]"
                            value="<%= locals.section.forecast %>">
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="advance">Planned Advance:</label>
                    </td>
                    <td class="form-row">
                        <input id="advance" required type="number" step="0.1" min="0" name="section[plannedAdvance]"
                            value="<%= locals.section.plannedAdvance %>">
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="EEEDuration">EEE duration (hh:mm):</label>
                    </td>
                    <td class="form-row">
                        <input id="EEEDuration" required type="time" name="section[EEEDuration]"
                            value="<%= locals.section.EEEDuration %>">
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="pre-meeting">Pre-shift meeting duration (hh:mm):</label>
                    </td>
                    <td class="form-row">
                        <input id="pre-meeting" required type="time" name="section[meetingDuration]"
                            value="<%= locals.section.meetingDuration %>">
                    </td>
                </tr>
                <tr>
                    <td class="form-row">
                        <label for="travelingTime">Traveling time (to & from) (hh:mm):</label>
                    </td>
                    <td class="form-row">
                        <input id="travelingTime" required type="time" name="section[travelingTime]"
                            value="<%= locals.section.travelingTime %>">
                    </td>
                </tr>
                <tr>
                    <td class="form-row" colspan="2">
                        <input style="width: 100%;" type="submit" value="Update">
                    </td>
                </tr>
            </table>
        </form>

        <div>
            <p>
                <a href="/sections/<%= section._id%>">&#11013 Back</a>
            </p>
        </div>

    </div>
</div>


<%- include("../partials/sidebar") %>
<%- include("../partials/footer") %>