<%- include("../partials/header") %>

<div class="main-body">
    <div class="element">
        <h2>Sections</h2>
        <h3>Total number of sections: <%= sections.length %></h3>
        <hr>
        <% if(!sections){ %>
            <div>
                <p>
                    No Sections 
                </p>
            </div>
        <% } else { %>
            <div>
                <% sections.forEach(function(section, index, array){ %>

                    <% if (index === 0) { %>
                        <a href="/sections/<%= section._id %>"><%= section.name%></a>
                    <% } %>

                    <% if (index !== 0) { %>
                        | <a href="/sections/<%= section._id %>"><%= section.name%></a>
                    <% } %>

                <% }) %>
            </div>
        <% } %>
        

        <br>
        <% if(locals.currentUser && locals.currentUser.isAdmin){ %>
            <a class="button" href="/sections/new">Add New Section</a>
        <% } %>
    </div>
</div>


