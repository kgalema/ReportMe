<%- include("../partials/header") %>

<div class="main-body">
    <div class="element">
        <h2>Adding New Section</h2>
        <form action="/sections" method="post">

            <div class="flex-form">
                <div class="flex-row">
                    <label for="section">Section:</label>
                    <input id="section" type="text" name="section[name]" placeholder="section_name"  onkeyup="validatePanelName(event)"  required>
                </div>
                <div class="flex-row">
                    <label for="mineOverseer">Mine Overseer:</label>
                    <select name="section[mineOverseer]" id="mineOverseer" required>
                        <option value="" selected disabled>Select M/O</option>
                        <% mineOverseers.forEach(mo => { %>
                            <option value="<%= mo._id %>"><%= mo.preferredName %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="flex-row">
                    <label for="budget">Budget (m<sup>2</sup> ):</label>
                    <input id="budget" type="number" min="0" step="0.1" name="section[budget]" placeholder="budget/shift" required>
                </div>
                <div class="flex-row">
                    <label for="forecast">Forecast (m<sup>2</sup> ):</label>
                    <input id="forecast" type="number" min="0" step="0.1" name="section[forecast]" placeholder="forecast/shift" required>
                </div>
                <div class="flex-row">
                    <label for="advance">Planned Advance (m):</label>
                    <input id="advance" type="number" step="0.1" min="0"  name="section[plannedAdvance]" placeholder="advance/blast" required>
                </div>
                <div class="flex-row">
                    <label for="EEEDuration">EEE duration (hh:mm):</label>
                    <input id="EEEDuration" type="time" name="section[EEEDuration]" required>
                </div>
                <div class="flex-row">
                    <label for="pre-meeting">Pre-shift meeting duration (hh:mm):</label>
                    <input id="pre-meeting" type="time" name="section[meetingDuration]" required>
                </div>
                <div class="flex-row">
                    <label for="travelingTime">Traveling time (to & from) (hh:mm):</label>
                    <input id="travelingTime" type="time" name="section[travelingTime]" required>
                </div>
                <div class="flex-row">
                    <input type="submit" value="Submit">
                </div>
            </div>
        </form>
        <br>
        <div>
            <a href="/sections">Sections</a>
        </div>
    </div>
</div>


