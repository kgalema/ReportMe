<%- include("../partials/header") %>

<div class="main-body">
    <div class="element">
        <legend><strong><%= section.name %></strong></legend>
        <hr>

        <div>
            <p>Mine Overseer - <%= section.mineOverseer %></p>
            <p>Effective shift duration D/S - (6 hours)</p>
            <p>Effective shift duration N/S - (9 hours)</p>
            <p>Planned advance - <%= section.plannedAdvance  %> <span>m</span> </p>
            <p>Daily target (Blast) - <%= section.forecast %> <span>m<sup>2</sup></span>  </p>
        </div>


        <div class="show-section">
            <a class="button" href="/sections/<%= section._id %>/production/new">Production Report</a>
            <a class="button" href="/sections/<%= section._id %>/newReds/new">Add New Red Panel</a>
        </div>
        <div>
            <a href="/sections">Sections</a>
        </div>
        
        <% if(currentUser && currentUser.isAdmin){ %>
        <div class="admin">
            <a href="/sections/<%= section._id %>/edit">Edit</a>
            <form action="/sections/<%= section._id %>?_method=DELETE" method="post">
                <button id="delete" type="submit">Delete</button>
            </form>
        </div>
        <%}%>


    </div>
</div>


<%- include("../partials/sidebar") %>
<%- include("../partials/footer") %>