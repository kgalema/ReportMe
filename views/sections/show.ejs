<%- include("../partials/header") %>

<div class="main-body">
    <div class="element">
        <h2><%= section.name %></h2>
        <hr>
        <div>
            <p>Mine Overseer - <%= section.mineOverseer.name %></p>
            <p>Planned advance/blast - <%= section.plannedAdvance  %> <span>m</span></p>
            <p>Daily target (Blast) - <%= section.forecast %> <span>m<sup>2</sup></span></p>
            <p>Safety meeting duration - <%= 20 %> minutes</p>
            <p>EEE duration - <%= 50 %> minutes</p>
            <% locals.shifts.forEach(shift => { %>
                <p><%= shift.name%> shift duration - (<%= (shift.duration - (20/60) - (50/60)).toFixed(2) %> hours)</p>
            <% }) %>
        </div>


        <div class="show-section">
            <a class="button" href="/sections/<%= section._id %>/production/new">Production Report</a>
            <a class="button" href="/sections/<%= section._id %>/newReds/new">Add New Red Panel</a>
        </div>
        <hr>
        <div>
            <a href="/sections">Sections</a>
        </div>
        
        <% if(currentUser && currentUser.isAdmin){ %>
        <div class="admin">
            <p>
                <a href="/sections/<%= section._id %>/edit">Edit</a>
            </p>
            <form action="/sections/<%= section._id %>?_method=DELETE" method="post">
                <button id="delete" type="submit">Delete</button>
            </form>
        </div>
        <%}%>


    </div>
</div>


<%- include("../partials/sidebar") %>
<%- include("../partials/footer") %>