<%- include("../partials/header") %>

<div class="main-body">
    <div class="element">
        <h2>Add New Asset</h2>
        <form action="/tmms" method="post">
            <div class="flex-form">
                <div class="flex-row">
                    <label for="tmm-cat">Category</label>
                    <select name="engAsset[category]" id="tmm-cat" required>
                        <option value="" selected disabled>Select Cat</option>
                        <option value="bolters">Roof Bolter</option>
                        <option value="drillRigs">Drill Rig</option>
                        <option value="LHDs">LHD</option>
                        <option value="UV">UV</option>
                        <option value="LDV">LDV</option>
                        <option value="electrical">Electrical</option>
                        <option value="mechanical">Mechanical</option>
                        <option value="ug_belts">UG Belts</option>
                    </select>
                </div>
                <div class="flex-row">
                    <label for="asset_id">Name/ID</label>
                    <input type="text" id="asset_id" name="engAsset[name]" onkeyup="validatePanelName(event)" size="7" required>
                </div>
                <div class="flex-row">
                    <label for="tmm-availability">Target Availability (%)</label>
                    <input type="number" name="engAsset[availability]" id="tmm-availability" min="0" max="100"   required>
                </div>
                <div class="flex-row">
                    <input type="submit" value="Submit">
                </div>
            </div>
        </form>
        <br>
        <div>
            <a href="/tmms">Dashboard</a>
        </div>
    </div>
</div>

