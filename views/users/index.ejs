<%- include("../partials/header") %>

<div class="main-body">
    <div class="element">
        <div class="element2">
            <h2>Declaration Users</h2>
            <p><strong>Total number of Declaration users: <%= allUsers.length%></strong></p>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Occupation</th>
                        <th>Department</th>
                        <th>Admin</th>
                    </tr>
                </thead>
                <tbody>
                    <% allUsers.forEach(user => { %>
                        <tr>
                            <td>
                                <a href="user/<%= user._id%>">
                                    <%= user.username %> 
                                </a>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.occupation %>
                            </td>
                            <td>
                                <%= user.department %>
                            </td>
                            <td>
                                <% if (user.isAdmin) { %>
                                    &#10004
                                <% }  else { %>
                                    &#10006
                                <% } %> 
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <p>
                <a class="button" href="/users/new">Add New User</a>
            </p>
        </div>
    </div>
</div>


